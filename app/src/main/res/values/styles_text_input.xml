<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutTheme</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textColorHint">@color/black40</item>
    </style>

    <style name="TextInputLayoutTheme">
        <item name="colorControlNormal">@color/EBEBEB</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutTheme</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textColorHint">@color/black40</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
    </style>

    <style name="EditTextStyle" parent="Font.Regular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>

        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="EditTextStyle.Phone" parent="EditTextStyle">
        <item name="android:digits">0123456789+- ()</item>
        <!--<item name="android:imeOptions">actionDone</item>-->
        <item name="android:inputType">number</item>
    </style>

    <style name="EditTextStyle.Email" parent="EditTextStyle">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextStyle.Iin" parent="EditTextStyle">
        <item name="android:inputType">number</item>
    </style>

    <style name="EditTextStyle.Password" parent="EditTextStyle">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextStyle.Name" parent="EditTextStyle">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="EditTextStyle.Number" parent="EditTextStyle">
        <item name="android:digits">012345678 9 </item>
        <!--<item name="android:imeOptions">actionDone</item>-->
        <item name="android:inputType">number</item>
    </style>

    <style name="EditTextStyle.Amount" parent="EditTextStyle">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="TextInputLayoutStyle.Filter" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutTheme.Filter</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textColorHint">@color/black40</item>
        <item name="boxCornerRadiusBottomEnd">9dp</item>
        <item name="boxCornerRadiusBottomStart">9dp</item>
        <item name="boxCornerRadiusTopEnd">9dp</item>
        <item name="boxCornerRadiusTopStart">9dp</item>
    </style>

    <style name="TextInputLayoutTheme.Filter">
        <item name="colorControlNormal">@color/EBEBEB</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>